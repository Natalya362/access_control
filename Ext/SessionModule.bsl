	Если ИменаПараметровСеанса = Неопределено Тогда
		Попытка
			Пользователи.ОпределитьТекущегоПользователя();
			ПользовательИБ = ПользователиИнформационнойБазы.ТекущийПользователь();
			Если ПользовательИБ <> Неопределено Тогда
				ПараметрыСеанса.ТекущийПользователь = Справочники.Пользователи.НайтиПоНаименованию(ПользовательИБ.Имя);
			Иначе
				ПараметрыСеанса.ТекущийПользователь = Справочники.Пользователи.ПустаяСсылка();
				Сообщить("Текущий пользователь не определён, установлена пустая ссылка.");
			КонецЕсли;
		Исключение
			Сообщить("Ошибка при определении текущего пользователя: " + ОписаниеОшибки());
			ПараметрыСеанса.ТекущийПользователь = Справочники.Пользователи.ПустаяСсылка();
		КонецПопытки;
	КонецЕсли;
	
